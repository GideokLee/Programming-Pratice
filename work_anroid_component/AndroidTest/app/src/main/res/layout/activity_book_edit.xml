<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".book.BookEditActivity">
    <TextView
        android:id="@+id/tv_book_edit_book_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="첵 제목"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_book_edit_book_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_book_edit_book_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_book_edit_book_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="작가이름"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_book_edit_book_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_book_edit_book_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_book_edit_book_author"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_book_edit_book_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="책정보"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_book_edit_book_author"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_book_edit_book_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_book_edit_book_content"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/tv_book_edit_book_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="책 가격"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_book_edit_book_content"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_book_edit_book_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_book_edit_book_price"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_book_edit_save"
        android:layout_margin="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="저장"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_book_edit_delete"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_book_edit_delete"
        android:layout_margin="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/btn_book_edit_save"
        app:layout_constraintEnd_toStartOf="@id/btn_book_edit_cancel"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_book_edit_cancel"
        android:layout_margin="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/btn_book_edit_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>